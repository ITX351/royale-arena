# 阻止IP访问的默认HTTP服务器
server {
    listen 80 default_server;
    server_name _;
    return 444;  # 静默关闭连接
}

# 阻止IP访问的默认HTTPS服务器
server {
    listen 443 ssl default_server;
    server_name _;
    
    # 使用自签名证书
    ssl_certificate /etc/nginx/ssl/dummy.crt;
    ssl_certificate_key /etc/nginx/ssl/dummy.key;
    
    return 444;
}
